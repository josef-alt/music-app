<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="controllers.PlayerControlsController" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1">
  <HBox alignment="CENTER">
    <Slider fx:id="time_slider" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25" prefWidth="250" />
  </HBox>
  <ButtonBar buttonOrder="U+L_HE+FBIX_NCYOA_R" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="75.0" prefWidth="300.0">
    <buttons>
      <Button fx:id="prev_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"/>           
      <Button fx:id="pause_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"/>                          
      <Button fx:id="next_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"/>
    </buttons>
    <padding>
      <Insets bottom="15.0" top="10.0" />
    </padding>
  </ButtonBar>
</VBox>