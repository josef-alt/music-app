<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="controllers.TrackInfoController" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1">
  <HBox alignment="CENTER" fillHeight="false" nodeOrientation="LEFT_TO_RIGHT">
    <children>
      <ImageView fx:id="album_art" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
    </children>
  </HBox>
  <HBox alignment="CENTER" maxWidth="300.0" minWidth="300.0" prefWidth="300.0">
     <children>
       <VBox>
         <children>
           <Label fx:id="song_name" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" text="song" textAlignment="CENTER" />
           <Label fx:id="artist_name" layoutX="10.0" layoutY="10.0" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" text="artist" textAlignment="CENTER" />
           <Label fx:id="album_name" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" text="album" textAlignment="CENTER" />
         </children>
       </VBox>
     </children>
  </HBox>
</VBox>